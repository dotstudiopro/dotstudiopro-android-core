                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="19"
                        android:maxLines="1"
                        android:paddingLeft="15dp" />

                    <LinearLayout
                        android:id="@+id/expiry_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
