<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:minHeight="70dp">

    <RelativeLayout
        android:id="@+id/recommendedItemRL"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp">

        <ProgressBar
            android:id="@+id/recommendedItemProgressBar"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recommendedItemIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/recommendedItemIV"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/recommendedItemTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/recommendedSeriesItemTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recommendedItemRL2"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp">

        <ProgressBar
            android:id="@+id/recommendedItemProgressBar2"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recommendedItemIV2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/recommendedItemIV2"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/recommendedItemTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#878d90"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/recommendedSeriesItemTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#878d90"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
