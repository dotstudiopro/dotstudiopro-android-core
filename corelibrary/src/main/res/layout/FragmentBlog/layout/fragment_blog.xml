<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/blog_page"
    tools:context="com.dotstudioz.dotstudioPRO.corelibrary.blogfragment.FragmentBlog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <HorizontalScrollView
            android:id="@+id/blogTitleHorizontalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:id="@+id/blogTitleLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add the blog title here dynamically -->


            </LinearLayout>
            
        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/blogPostScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ScrollView>

    </LinearLayout>

</FrameLayout>
