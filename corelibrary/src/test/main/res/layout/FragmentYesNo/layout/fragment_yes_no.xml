<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.dotstudioz.dotstudioPRO.corelibrary.yesnofragment.FragmentYesNo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Are you sure you want to close the app?"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <Button
                    android:id="@+id/yesButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusRight="@+id/noButton"
                    android:nextFocusLeft="@+id/noButton"
                    android:nextFocusUp="@+id/noButton"
                    android:nextFocusDown="@+id/noButton"
                    android:nextFocusForward="@+id/noButton"
                    />
                <Button
                    android:id="@+id/noButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:layout_below="@+id/yesButton"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:nextFocusRight="@+id/yesButton"
                    android:nextFocusLeft="@+id/yesButton"
                    android:nextFocusUp="@+id/yesButton"
                    android:nextFocusDown="@+id/yesButton"
                    android:nextFocusForward="@+id/yesButton"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
