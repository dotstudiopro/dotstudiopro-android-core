                <Button
                    android:id="@+id/start_free_trial_button"
                    android:layout_width="230dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_white_background"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/skipButton1"
                    android:nextFocusLeft="@+id/signinwithexisting"
                    android:nextFocusRight="@+id/skipButton1"
                    android:nextFocusUp="@+id/signinwithexisting"
                    android:text="Start Your Free Trial"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/watch_without_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Watch instantly without ads"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/ortv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/skipButton1"
                    android:layout_width="230dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_white_background"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/signinwithexisting"
                    android:nextFocusLeft="@+id/start_free_trial_button"
                    android:nextFocusRight="@+id/signinwithexisting"
                    android:nextFocusUp="@+id/start_free_trial_button"
                    android:text="Watch Free"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/no_payment_info_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="No payment info required"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/signinwithexisting"
                    android:layout_width="200dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_white_background"
                    android:defaultFocusHighlightEnabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/start_free_trial_button"
                    android:nextFocusLeft="@+id/skipButton1"
                    android:nextFocusRight="@+id/start_free_trial_button"
                    android:nextFocusUp="@+id/skipButton1"
                    android:text="Log In to Your Account"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/already_in_tribe_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Already in the tribe? Log In here"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loginsecondLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
