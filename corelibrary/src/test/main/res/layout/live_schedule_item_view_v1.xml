<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/firstRowLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/liveScheduleTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textColor="#4A66ED"/>
                <TextView
                    android:id="@+id/liveScheduleZoneTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:textColor="#B4B4B4"/>
                <TextView
                    android:id="@+id/liveScheduleDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:textColor="#EAEAEA"/>
            </LinearLayout>

            <TextView
                android:id="@+id/titleLiveScheduleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="18sp"
                android:textColor="#EAEAEA"/>

            <TextView
                android:id="@+id/descriptionLiveScheduleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                android:textColor="#999999"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seccondRowLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageView-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/videoThumbnailImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#B4B4B4"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
